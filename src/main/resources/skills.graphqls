schema {
  query: Query
}

type Query {
  skill(id: String): Skill
  skills: [Skill!]!
  category(id: String): Category
  categories: [Category!]!
  skillsByCategory(categoryId: String): [Skill!]!
  craft(id: String): Craft!
  crafts: [Craft!]!
  grade(id: String): Grade!
  grades: [Grade!]!
}

type Skill {
  id: ID!
  title: String!
  description: String!
  examples: [String!]!
  categoryId: String!
}

type Category {
  id: ID!
  title: String!
  description: String!
}

type Craft {
  id: ID!
  title: String!
  description: String!
  leads: [String!]!
  slackChannels: [String!]!
  devServicesPage: String!
}

type Grade {
  id: ID!
  title: String!
  description: String!
  hrCode: String!
}