schema {
  query: Query
}

type Query {
  skill(id: String): Skill
  skills: [Skill!]!
  category(id: String): Category
  categories: [Category!]!
  skillsByCategory(categoryId: String): [Skill!]!
}

type Skill {
  id: ID!
  title: String!
  description: String!
  examples: [String!]!
  categoryId: String!
}

type Category {
  id: ID!
  title: String!
  description: String!
}